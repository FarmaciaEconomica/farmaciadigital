# Porta do servidor
PORT=10000

# Segredo para JWT (troque em produção)
JWT_SECRET=seu-segredo-jwt-muito-seguro

# Primeiro admin (só usado se não existir nenhum usuário)
ADMIN_EMAIL=admin@farmacia.com
ADMIN_PASSWORD=senha123

# PostgreSQL (Render) - Internal Database URL
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# URL do frontend (Vercel)
FRONTEND_URL=https://seu-app.vercel.app

# Cloudinary
CLOUDINARY_CLOUD_NAME=seu_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=seu_api_secret

# Node Environment
NODE_ENV=production
